{
    "include": ["src/**/*"],
    "compilerOptions": { 
    "target": "es2020",    
    "module": "NodeNext",                                 
    "rootDir": "./src",               
    "moduleResolution": "NodeNext", 
    "outDir": "./dist",   
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true, 
    "strict": true,  
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
